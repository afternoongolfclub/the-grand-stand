rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read on all collections
    match /{document=**} {
      allow read: if true;
    }

    // Anyone can submit picks
    match /entries/{entryId} {
      allow create: if true;
      allow update, delete: if true; // admin password enforced in app UI
    }

    // Admin manages tournaments and players (password enforced in app UI)
    match /tournaments/{id} {
      allow write: if true;
    }
    match /players/{id} {
      allow write: if true;
    }

    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
